<!DOCTYPE html>
<html lang="en">
<%-include('./partials/head') %>
<body>
    <div class="container">
        <h1 class="mb-4">Blog Articles</h1>
        <a href="/articles/new" class="btn btn-success mb-4">New Article</a>
        <% articles.forEach(article => {%>
            <div class="card">
                <div class="card-header">
                    <h1><%= article.title %></h1>
                </div>
                <div class="card-body">
                  <p class="card-subtitle text-muted mb-2"><%=article.created.toLocaleDateString()  %></p>
                  <div class="card-text mb-2"><%=article.description %></div>
                  <a href="#" class="btn btn-primary btn-info btn-danger">Go somewhere</a>
                  <a href="#" class="btn  btn-info ">Edit</a>
                  <a href="#" class="btn  btn-danger">Delete</a>
                </div>
              </div>
        <%})%> 
       
    </div>
</body>
</html>